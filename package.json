{
  "name": "domodule",
  "version": "2.2.0",
  "description": "Class based modules",
  "main": "dist/domodule.js",
  "keywords": [
    "module",
    "browser"
  ],
  "scripts": {
    "build": "browserify lib/domodule.js -o dist/domodule.js -s Domodule",
    "build:test": "browserify test/domodule.test.js -o test/dist/test.js",
    "dev": "concurrently -r 'nswatch' 'static-server -p 8000'",
    "lint": "eslint . --ignore-pattern dist"
  },
  "watch": {
    "lib/*.js": [
      "lint",
      "build",
      "build:test"
    ],
    "test/*.js": [
      "lint",
      "build:test"
    ]
  },
  "repository": "https://github.com/firstandthird/domodule",
  "author": "First+Third",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "concurrently": "^2.2.0",
    "eslint": "^3.5.0",
    "eslint-config-firstandthird": "^3.0.2",
    "eslint-plugin-import": "^1.15.0",
    "nswatch": "^0.2.0",
    "static-server": "^2.0.3",
    "tape": "^4.6.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "firstandthird"
  },
  "browserify": {
    "transform": [["babelify", { "presets": ["es2015"] }]]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
